<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/global_landscape_margin"
                android:paddingRight="@dimen/global_landscape_margin" >

                <ImageView
                    android:id="@+id/iv_book"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/book_default" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_bookName"
                        style="@android:style/TextAppearance.Large"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:selectable="true"
                        android:singleLine="true"
                        android:text="Book Name"
                        android:textColor="@color/text_dark" />

                    <TextView
                        android:id="@+id/tv_authorName"
                        style="@android:style/TextAppearance.Medium"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:selectable="true"
                        android:singleLine="true"
                        android:text="Author Name"
                        android:textColor="@color/text_dark"
                        android:typeface="normal" />

                    <TextView
                        android:id="@+id/tv_authorName"
                        style="@android:style/TextAppearance.Medium"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:selectable="true"
                        android:singleLine="true"
                        android:text="Book Type"
                        android:textColor="@color/text_dark"
                        android:typeface="serif" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:background="#0066aa" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/global_landscape_margin"
                    android:paddingRight="@dimen/global_landscape_margin" >

                    <RatingBar
                        android:id="@+id/rb_book_small"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:numStars="5" />

                    <TextView
                        android:id="@+id/tv_bookRatingNum_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/rb_book_small"
                        android:text="0"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/text_dark" />

                    <TextView
                        android:id="@+id/tv_borrowNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/rb_book_small"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="0"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/text_dark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_borrowNum"
                        android:layout_alignBottom="@+id/tv_borrowNum"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_borrowNum"
                        android:text="borrowers"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/text_dark" />

                    <TextView
                        android:id="@+id/createdDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:text="dd/mm/yyyy"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/text_dark" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/createdDateTime"
                        android:paddingLeft="@dimen/global_landscape_margin"
                        android:text="MB"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/text_dark" />
                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="#0066aa" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/global_landscape_margin"
                    android:paddingRight="@dimen/global_landscape_margin" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Rate &amp; Reviews"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/text_dark"
                        android:textStyle="italic" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" />

                    <RatingBar
                        android:id="@+id/rb_book_clickable"
                        style="?android:attr/ratingBarStyleIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_weight="0" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="#0066aa" />

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|left"
                        android:paddingLeft="@dimen/global_landscape_margin"
                        android:paddingTop="5dp"
                        android:text="Descriptions"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/text_dark"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/tv_description"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:lineSpacingExtra="5dp"
                        android:maxLines="8"
                        android:paddingBottom="40dp"
                        android:paddingLeft="@dimen/global_landscape_margin"
                        android:paddingRight="@dimen/global_landscape_margin"
                        android:paddingTop="50dp"
                        android:textColor="@color/text_dark" />

                    <ImageView
                        android:id="@+id/iv_expandableDesc"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right|bottom"
                        android:layout_weight="0"
                        android:contentDescription="TODO"
                        android:paddingRight="@dimen/global_landscape_margin"
                        android:src="@android:drawable/arrow_down_float"
                        tools:ignore="ObsoleteLayoutParam" />

                    <ProgressBar
                        android:id="@+id/pb_bookDetail"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:indeterminate="true" />
                </FrameLayout>

                <!-- start of Ratings -->

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="#0066aa" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="@dimen/global_landscape_margin"
                    android:paddingTop="10dp"
                    android:text="Reviews"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/text_dark"
                    android:textStyle="italic" />

                <LinearLayout
                    android:id="@+id/bookRatesAndReviews"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/rating_frame"
                        android:minWidth="80dp" >

                        <TableRow
                            android:id="@+id/tableRow2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#0088aa"
                            android:gravity="center"
                            android:padding="10dp" >

                            <RatingBar
                                android:id="@+id/rb_book_small_2"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:numStars="5"
                                android:rating="2"
                                android:stepSize="1" />
                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow3"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center" >

                            <TextView
                                android:id="@+id/tv_bookRatingValue"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:padding="10dp"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@color/text_dark"
                                android:textStyle="bold"
                                android:typeface="normal" />
                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow4"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center" >

                            <TextView
                                android:id="@+id/tv_bookRatingNum_2"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:text="0"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/text_dark"
                                android:typeface="normal" />
                        </TableRow>
                    </TableLayout>

                    <TableLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp" >

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:paddingRight="15dp"
                                android:text="5 stars"
                                android:textColor="@color/text_dark" />

                            <ProgressBar
                                android:id="@+id/pb_rating5stars"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:minWidth="70dp"
                                android:progress="99"
                                android:progressDrawable="@drawable/progress_simple" />

                            <TextView
                                android:id="@+id/tv_rating5stars"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:paddingLeft="15dp"
                                android:text="0"
                                android:textColor="@color/text_dark" />
                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4 stars"
                                android:textColor="@color/text_dark" />

                            <ProgressBar
                                android:id="@+id/pb_rating4stars"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:progress="13"
                                android:progressDrawable="@drawable/progress_simple" />

                            <TextView
                                android:id="@+id/tv_rating4stars"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:text="0"
                                android:textColor="@color/text_dark" />
                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 stars"
                                android:textColor="@color/text_dark" />

                            <ProgressBar
                                android:id="@+id/pb_rating3stars"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:progress="32"
                                android:progressDrawable="@drawable/progress_simple" />

                            <TextView
                                android:id="@+id/tv_rating3stars"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:text="0"
                                android:textColor="@color/text_dark" />
                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2 stars"
                                android:textColor="@color/text_dark" />

                            <ProgressBar
                                android:id="@+id/pb_rating2stars"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:progress="22"
                                android:progressDrawable="@drawable/progress_simple" />

                            <TextView
                                android:id="@+id/tv_rating2stars"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:text="0"
                                android:textColor="@color/text_dark" />
                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 star"
                                android:textColor="@color/text_dark" />

                            <ProgressBar
                                android:id="@+id/pb_rating1star"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:progress="50"
                                android:progressDrawable="@drawable/progress_simple" />

                            <TextView
                                android:id="@+id/tv_rating1stars"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:text="0"
                                android:textColor="@color/text_dark" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
                <!-- end of ratings -->
                <!-- start of reviews -->

                <ListView
                    android:id="@+id/lv_reviews"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:visibility="gone" >
                </ListView>

                <ProgressBar
                    android:id="@+id/pb_bookReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/clickabletv_moreReviews"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:drawableRight="@android:drawable/ic_media_play"
                    android:gravity="right|center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingRight="@dimen/global_landscape_margin"
                    android:text="More reviews"
                    android:textColor="@color/text_dark" />
                <!-- end of reviews -->

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="#0066aa" />

                <TextView
                    android:id="@+id/clickabletv_moreByAuthor"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:drawableRight="@android:drawable/ic_media_play"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/global_landscape_margin"
                    android:paddingRight="@dimen/global_landscape_margin"
                    android:paddingTop="5dp"
                    android:text="More by the author"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/text_dark"
                    android:textStyle="italic" />

                <ProgressBar
                    android:id="@+id/progressBar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <GridView
                    android:id="@+id/gv_moreByAuthor"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:numColumns="3"
                    android:visibility="gone" >
                </GridView>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="#0066aa" />

                <TextView
                    android:id="@+id/clickabletv_moreSimilarBorrow"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:drawableRight="@android:drawable/ic_media_play"
                    android:gravity="left"
                    android:paddingLeft="@dimen/global_landscape_margin"
                    android:paddingRight="@dimen/global_landscape_margin"
                    android:text="Readers also read"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/text_dark"
                    android:textStyle="italic" />

                <ProgressBar
                    android:id="@+id/progressBar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <GridView
                    android:id="@+id/gv_moreBySimilarBorrow"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:numColumns="3"
                    android:visibility="gone" >
                </GridView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>