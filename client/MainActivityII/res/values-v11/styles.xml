<resources>

    <!-- For API level 11 or later, the Holo theme is available and we prefer that. -->
    <style name="ThemeHolo" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- style for the action bar backgrounds -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#005577</item>
        <item name="android:backgroundStacked">#808080</item>
        <item name="android:backgroundSplit">#f0f0f0</item>
    </style>

    <!-- For API level 11 or later, we can use the magical DialogWhenLarge theme. -->
    <style name="ThemeDialogWhenLarge" parent="android:style/Theme.Holo.DialogWhenLarge"></style>

</resources>